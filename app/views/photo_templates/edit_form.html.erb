<div class="container">
  <div class="row">
   <div class="col-md-12">
    </div>
  </div>


<div class="card">
  <div class="card-header">
    <h3 class="card-title">
      Edit Photo
    </h3>
  </div>

<div class="card-body">
<form action="/update_photo/<%= @photo.id %>" method="post">

  <div class="form-group">
    <label for="caption">
      Caption
    </label>

    <textarea id="caption" name="caption" class="form-control" rows="3"><%= @photo.caption %></textarea>
  </div>

  <div class="form-group">
    <label for="image">
      Image
    </label>

    <input type="text" id="image" name="image" class="form-control" value="<%= @photo.image %>">
  </div>


    <input type="hidden" name="user_id" class="form-control" value="<%= current_user.id %>">


  <button class="btn btn-block btn-outline-secondary">
    Update photo
  </button>
</form>
</div>


<div class="form-group">
  <a href="/photos/<%=@photo.id%>" class="btn btn-link btn-block">
    Cancel
  </a>
</div>

</div>
</div>