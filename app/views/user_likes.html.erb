<div class="container">
  <div class="row">
    <div class="col-md-12">
    </div>
  </div>


<% @user.likes.each do |like| %>

  <div class="row mb-5">
      <div class="col-md-8 offset-md-2">
        <div class="card">
          <div class="card-header">
            <h4 class="card-title">
              <a href="/users/<%=like.user_id%>">
                <%= like.user.username %>
              </a>
              <small><%= time_ago_in_words(like.photo.created_at) %></small>
            </h4>
          </div>
          
          <div class="card-body">
            
              <a href="/photos/<%=like.photo_id %>">
                <img src="<%=like.photo.image%>" class="img-fluid">
              </a>
                
          </div>   
              
              
          
          
        </div>
      </div>
  </div>
  
  
  
<%end%>


</div>